{
  "name": "pvp-helper",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun astro dev",
    "start": "bunx --bun astro start",
    "build": "tsc && bunx --bun astro build",
    "preview": "bunx --bun astro preview",
    "format": "bunx --bun prettier --write 'src/**/*.{astro,js,ts,tsx,md,json}'"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^4.1.2",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.6.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.2",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true,
    "semi": true
  }
}