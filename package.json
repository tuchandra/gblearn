{
  "name": "pvp-helper",
  "author": "tushar chandra",
  "version": "v0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun astro dev",
    "build": "tsc && bunx --bun astro build",
    "preview": "bunx --bun astro preview",
    "lint": "bunx biome lint . --write --unsafe",
    "format": "bunx --bun prettier --write '**/*.{astro,js,mjs,ts,tsx,md}'"
  },
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "@astrojs/tailwind": "^5.1.4",
    "@biomejs/biome": "^1.9.4",
    "astro": "^4.16.18",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.23",
    "nanostores": "^0.11.3",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true,
    "semi": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss/nesting": {},
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "devDependencies": {
    "@types/bun": "^1.2.16"
  }
}
