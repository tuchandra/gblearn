{
  "name": "pvp-helper",
  "author": "tushar chandra",
  "version": "v0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun astro dev",
    "build": "tsc && bunx --bun astro build",
    "preview": "bunx --bun astro preview",
    "lint": "bunx biome lint . --apply-unsafe",
    "format": "bunx --bun prettier --write 'src/**/*.{astro,js,ts,tsx,md}'"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "@biomejs/biome": "^1.8.1",
    "astro": "^4.10.2",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.12.2",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true,
    "semi": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss/nesting": {},
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "devDependencies": {
    "@types/bun": "^1.0.1"
  }
}
