---
// Component for one Pokemon's icon and name.

import type { CollectionEntry } from 'astro:content';

interface Props {
  pokemon: CollectionEntry<'pokemon'>;
}

const {
  pokemon: { data },
} = Astro.props;

const pokemonIcon = `/pokemon/${data.dex.toString().padStart(4, '0')}-${data.speciesId}.png`;
---

<div class="flex flex-row gap-4">
  <img
    src={pokemonIcon}
    alt={data.speciesName}
    class="h-12 w-12 rounded-full"
  />
  <div>
    <h2 class="text-xl font-semibold">{data.speciesName}</h2>
    <div class="flex flex-row">
      <img
        src={`/types/${data.types[0]}.png`}
        alt={data.types[0]}
        class="h-4 w-4 rounded-full"
      />
      {
        data.types[1] ? (
          <img
            src={`/types/${data.types[1]}.png`}
            alt={data.types[1]}
            class="ml-1 h-4 w-4 rounded-full"
          />
        ) : null
      }
    </div>
  </div>
</div>
