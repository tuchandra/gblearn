---
// Component for one charged move (type, name, energy, damage)

import type { ChargedMove } from '../models';

interface Props {
  move: ChargedMove;
  stab: boolean;
}
const { move, stab } = Astro.props;
const stabBonus = stab ? 1.2 : 1;
const damagePerEnergy = (move.power / move.energy) * stabBonus;
---

<div class="flex flex-col text-neutral-400">
  <div class="inline-flex items-center">
    <img
      src={`/types/${move.type}.png`}
      alt={move.type}
      class="h-4 w-4 rounded-full"
    />
    <span class="ml-1 text-sm">{move.name}</span>
  </div>
  <span class="text-xs">
    {move.energy} E - {damagePerEnergy.toFixed(2)} DPE
  </span>
</div>
