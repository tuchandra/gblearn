---
import Pokemon from '../components/pokemon.astro';
import { getCollection, getEntry } from 'astro:content';

const pokemon = await getCollection('pokemon');
const fantasy = await getEntry('metas', 'fantasy');
const fantasyPokemon = await Promise.all(
  fantasy.data.map(async (p) => {
    const mon = await getEntry(p.pokemon);
    return {
      ...mon,
      data: {
        ...mon.data,
        fastMoves: [await getEntry(p.fastMove)],
        chargedMoves: [
          await getEntry(p.chargedMoves[0]),
          await getEntry(p.chargedMoves[1]),
        ],
      },
    };
  }),
);
console.log(fantasyPokemon);
